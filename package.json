    "react-dom": "^17.0.1",
    "react-qrcode-logo": "^2.2.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.27",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/workbox-build": "^5.0.0",
    "esbuild": "^0.8.46",
    "gnomon": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "reload": "^3.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "wait-on": "^5.2.1",
    "workbox-build": "^6.1.0"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.20.0",
