  },
  "bugs": {
    "url": "https://github.com/sprout2000/nenrei/issues"
  },
  "keywords": [
    "pwa",
    "年齢計算"
  ],
  "scripts": {
    "dev": "run-s clean start",
    "start": "run-p build:*",
    "build:serve": "wait-on public/main.js && reload -d public -p 7000 -s index.html -b",
    "build:watch": "NODE_ENV=\\\"development\\\" ts-node ./esbuild.ts",
    "production": "NODE_ENV=\\\"production\\\" ts-node ./esbuild.ts | gnomon",
    "clean": "rm -f public/*.{js,css,map}"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "localforage": "^1.9.0",
